{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist-server",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "server/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
